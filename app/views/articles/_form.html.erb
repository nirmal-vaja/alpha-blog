<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article,class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of an Article" %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <%= f.label :description, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description" %>
          </div>
        </div>

        <div class="form-group row mt-2 justify-content-center">
          <div class="col-2">
            <%= f.submit class:"btn btn-outline-light btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center">
      <div class="col-10 text-center">
        <%= link_to '[Cancel and Return to articles listing]', articles_path, class: "text-info" %>  
      </div>
    </div>
  </div>
</div>
