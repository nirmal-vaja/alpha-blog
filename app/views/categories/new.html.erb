<h1 class="text-center mt-4">Create a new Category</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category,class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category Name :", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounde d", placeholder: "Enter Category name" %>
          </div>
        </div>

        <div class="form-group row mt-2 justify-content-center">
          <div class="col-2">
            <%= f.submit class:"btn btn-outline-light btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center">
      <div class="col-10 text-center">
        <%= link_to '[Cancel and Return to categories listing]', categories_path, class: "text-info" %>  
      </div>
    </div>
  </div>
</div>
